<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <gradient
        android:type="radial"
        android:centerX="0.5"
        android:centerY="0.5"
        android:startColor="#66008BFF"
        android:endColor="#00008BFF"
        android:gradientRadius="80%" />

    <!-- Border color and width -->
    <stroke
        android:width="5dp"
        android:color="#66F9B0" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Padding -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
